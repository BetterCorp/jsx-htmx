{
  "name": "jsx-htmx",
  "version": "1.0.3",
  "description": "TypeSafe HTML templates using TypeScript. No need to learn a template library.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BetterCorp/jsx-htmx.git"
  },
  "scripts": {
    "build": "tsc"
  },
  "engines": {
    "node": ">=18"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "types": "./lib/index.d.ts"
    },
    "./jsx-runtime": {
      "require": "./lib/jsx-runtime.js",
      "types": "./lib/jsx-runtime.d.ts"
    },
    "./jsx-dev-runtime": {
      "require": "./lib/jsx-dev-runtime.js",
      "types": "./lib/jsx-dev-runtime.d.ts"
    },
    "./lib": {
      "require": "./lib/index.js",
      "types": "./lib/index.d.ts"
    },
    "./lib/jsx-runtime": {
      "require": "./lib/jsx-runtime.js",
      "types": "./lib/jsx-runtime.d.ts"
    },
    "./lib/jsx-dev-runtime": {
      "require": "./lib/jsx-dev-runtime.js",
      "types": "./lib/jsx-dev-runtime.d.ts"
    }
  },
  "keywords": [
    "typescript",
    "jsx",
    "html",
    "htmx",
    "typesafe",
    "template"
  ],
  "files": [
    "lib",
    "README.md",
    "src"
  ],
  "author": "Mitchell R <github@mrincworld.com>",
  "license": "AGPL-3.0-only",
  "devDependencies": {
    "@types/node": "^20.11.16",
    "typescript": "^5.3.3"
  }
}