{
  "include": ["src/**/*"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./lib",
    "sourceMap": true,
    "outDir": "./lib",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  }
}
